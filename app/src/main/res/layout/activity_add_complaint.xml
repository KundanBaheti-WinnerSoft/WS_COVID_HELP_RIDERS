                android:layout_height="wrap_content"
                android:hint="@string/date_of_test"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_date_of_test"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusableInTouchMode="false"
                    android:inputType="text"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
