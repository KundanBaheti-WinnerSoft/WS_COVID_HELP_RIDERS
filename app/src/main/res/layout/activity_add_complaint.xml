                android:layout_height="wrap_content"
                android:hint="@string/rtpcr_test_date"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
