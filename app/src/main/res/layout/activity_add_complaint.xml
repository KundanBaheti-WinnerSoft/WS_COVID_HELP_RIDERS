                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="start"
                android:text="@string/rtpcr_test_result"
                android:textColor="@color/black"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rg_rtpcr_test_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_rtpcr_positive"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/layout_margin_10dp"
                    android:text="@string/positive" />

                <RadioButton
                    android:id="@+id/rb_rtpcr_negative"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/layout_margin_10dp"
                    android:text="@string/negative" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_rtpcr_antigen"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
