            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_bed_require"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5dp"
                android:gravity="start"
                android:text="@string/type_of_required_bed"
                android:textColor="@color/black"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rb_bed_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rb_icu"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/layout_margin_10dp"
                    android:text="@string/icu" />

                <RadioButton
                    android:id="@+id/rb_oxygen"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/layout_margin_10dp"
                    android:text="Oxygen" />

                <RadioButton
                    android:id="@+id/rb_other"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:checked="false"
                    android:padding="@dimen/layout_margin_10dp"
                    android:text="@string/other" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_date_of_text"
