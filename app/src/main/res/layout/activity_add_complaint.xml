                    android:inputType="text"
                    android:maxLength="7"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_gov_private"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Government or Private"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_gov_private"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:maxLength="30"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_o2_room_level"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/o2_room_level"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_patient_o2_room_level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="3"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_o2_with_support"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patient_o2_with_support"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_patient_o2_with_support"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="3"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_any_comorbidity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/any_comorbidity"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_any_comorbidity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_current_condition"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patient_current_condition"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_patient_current_condition"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="20"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_other_disease"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patient_other_disease"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_patient_other_disease"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="30"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_what_help_needed"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/what_kind_of_help_needed"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_what_help_needed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="30"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_where_help_needed"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/where_does_it_want"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_where_help_needed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="30"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_where_currently_admitted"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/where_admitted_currently"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
                app:boxStrokeWidth="2dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_where_currently_admitted"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="30"
                    app:boxCornerRadiusBottomEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusBottomStart="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopEnd="@dimen/layout_margin_10dp"
                    app:boxCornerRadiusTopStart="@dimen/layout_margin_10dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <Spinner
                android:id="@+id/spn_bg"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/margin_5dp"
                android:visibility="gone" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_p_oxy_level"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/patient_oxygen_level"

                android:visibility="gone"
                app:boxStrokeColor="@color/black"
